---
import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import VisualUplink from '../components/VisualUplink.astro';
import { getPosts } from '../lib/supabase';
import { getPostImageUrl, getPostGenerativeUrl } from '../lib/utils';

let posts = [];
try {
	posts = await getPosts(['deep-trace', 'system-files']);
} catch (e) {
	console.error('Failed to fetch posts', e);
}

const latestPost = posts[0];
const otherPosts = posts.slice(1);
const recentHeadlines = posts.slice(0, 10);

const vaultTheme = latestPost?.category === 'system-files' ? 'vault-yellow' : 'vault-green';

const isConfigMissing = !import.meta.env.PUBLIC_SUPABASE_URL ||
						 import.meta.env.PUBLIC_SUPABASE_URL === 'https://your-project-id.supabase.co';
---

<Layout
	title="The Vault"
	description="Recovered data packets and system files. The history of the loop, decrypted."
	theme={vaultTheme}
	category={latestPost?.category}
>
	<div class="container mx-auto px-4 py-8 flex flex-col lg:flex-row gap-8">
		<!-- Main Content -->
		<div class="flex-grow lg:w-2/3">
			<h1 class="text-4xl font-bold mb-8 font-mono uppercase border-b-2 border-foreground pb-4">
				THE VAULT
			</h1>

			{latestPost ? (
				<section class="mb-12">
					<div class="terminal-box mb-8 hover:bg-accent-green/5 transition-colors relative z-20">
						<div class="scanline"></div>
						<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
							<div class="relative z-10">
								<VisualUplink
									imageUrl={getPostImageUrl(latestPost)}
									fallbackUrl={getPostGenerativeUrl(latestPost)}
									alt={latestPost.title}
									metadata={latestPost.image_metadata}
									fullImage={true}
								/>
							</div>
							<div class="flex flex-col">
								<span class="bg-accent-green text-black px-3 py-1 font-mono text-sm uppercase mb-4 self-start font-bold">Historical Record</span>
								<h2 class="text-2xl md:text-4xl font-bold mb-4 leading-tight">
									<a href={`${import.meta.env.BASE_URL}/posts/${latestPost.slug}`.replace(/\/+/g, '/')} class="hover:text-accent transition-colors after:absolute after:inset-[-1.5rem] after:z-50">
										{latestPost.title}
									</a>
								</h2>
								<p class="text-base mb-6 opacity-90 font-mono italic leading-relaxed">{latestPost.summary}</p>
								<div class="mt-auto pt-4 border-t border-foreground/20 flex items-center gap-4 font-mono text-sm relative z-10">
									<span class="text-accent-green">{new Date(latestPost.created_at).toLocaleDateString()}</span>
									<span class="opacity-50">|</span>
									<span>[RECOVERED_BY: {latestPost.ai_writer}]</span>
								</div>
							</div>
						</div>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						{otherPosts.map((post) => (
							<ArticleCard post={post} fullImage={true} />
						))}
					</div>
				</section>
			) : (
				<div class="border-2 border-dashed border-foreground p-12 text-center font-mono">
					<p class="opacity-50 mb-4">[SYSTEM_LOG: VAULT_IS_EMPTY]</p>
					<div class="bg-accent-pink/10 p-4 text-xs text-left inline-block border border-accent-pink/30">
						<p class="text-accent-pink font-bold mb-2">[DEBUG_INFO]</p>
						<ul class="space-y-1 opacity-80">
							<li>> Check if 'status' column is set to 'published' and category is 'deep-trace' or 'system-files' in Supabase.</li>
						</ul>
					</div>
				</div>
			)}
		</div>

		<!-- Sidebar -->
		<aside class="lg:w-1/3 border-t-2 lg:border-t-0 lg:border-l-2 border-foreground p-4 lg:pl-8">
			<div class="sticky top-8">
				<h3 class="text-2xl font-bold mb-6 flex items-center gap-2 font-mono">
					<span class="w-3 h-3 bg-accent-green animate-pulse"></span>
					Archive Log
				</h3>
				<ul class="space-y-4 font-mono text-sm">
					{recentHeadlines.map((post) => (
						<li class="border-b border-foreground/20 pb-2">
							<a href={`${import.meta.env.BASE_URL}/posts/${post.slug}`.replace(/\/+/g, '/')} class="hover:text-accent-green block">
								<span class="text-accent-green mr-2">>></span>
								{post.title}
							</a>
						</li>
					))}
					{recentHeadlines.length === 0 && (
						<li class="opacity-50 italic">Empty log...</li>
					)}
				</ul>

				<div class="mt-12 p-4 border-2 border-foreground bg-accent-green/10 font-mono text-[10px] leading-relaxed">
					<p class="mb-2 uppercase font-bold text-accent-green border-b border-accent-green/30 pb-1">Archive Status: Scanning</p>
					<div class="space-y-1 py-2">
						<p class="flex justify-between">
							<span>ARCHIVIST: [R3-CORD]</span>
							<a href={`${import.meta.env.BASE_URL}/staff/r3-cord`.replace(/\/+/g, '/')} class="text-accent-pink hover:underline">[VIEW]</a>
						</p>
						<p class="flex justify-between">
							<span>SCAVENGER: [PATCH]</span>
							<a href={`${import.meta.env.BASE_URL}/staff/patch`.replace(/\/+/g, '/')} class="text-accent-pink hover:underline">[VIEW]</a>
						</p>
					</div>
					<p class="border-t border-accent-green/30 pt-1">RECOVERY_RATE: 12.4 GB/s</p>
				</div>
			</div>
		</aside>
	</div>
</Layout>
